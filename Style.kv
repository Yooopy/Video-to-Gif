<MainWindow>:
    MDScreen:
        name: 'main'
        MDFloatLayout:
            orientation: 'vertical'


            MDCard:
                orientation: 'vertical'
                size_hint: 0.98,0.9
                pos_hint: {'top': 1,'center_x': 0.5}
                Widget:
                MDBoxLayout:
                    orientation: 'vertical'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 0.6,1
                    MDBoxLayout:
                        spacing: 10
                        orientation: 'horizontal'
                        MDCard:
                            radius: 25
                            style: 'elevated'
                            size_hint_y: 1.3
                            MDTextField:
                                radius: 25
                                id: target_mp4
                                theme_line_color: "Custom"
                                line_color_normal: (0,0,0,0)
                                MDTextFieldHintText:
                                    text: 'Mp4 Location'
                        MDFabButton:
                            on_release: app.file1()
                            icon: 'file-edit'
                    Widget:
                        size_hint_y: 1.2
                    MDBoxLayout:
                        spacing: 10
                        orientation: 'horizontal'
                        MDCard:
                            radius: 25
                            style: 'elevated'
                            size_hint_y: 1.3
                            MDTextField:
                                radius: 25
                                id: target_gif
                                theme_line_color: "Custom"
                                line_color_normal: (0,0,0,0)
                                MDTextFieldHintText:
                                    text: 'Gif Target Location'
                        MDFabButton:
                            on_release: app.file2()
                            icon: 'file-edit'
                Widget:
                    size_hint_y: 0.5
                MDCard:
                    pos_hint: {'center_x': 0.5,}
                    radius: 25
                    style: 'elevated'
                    size_hint: 0.5,0.4
                    radius: 25
                    MDTextField:
                        id: gif_name
                        radius: 25
                        theme_line_color: "Custom"
                        line_color_normal: (0,0,0,0)
                        MDTextFieldHintText:
                            text: 'Gif Name'


                Widget

            MDCard:
                spacing: 5
                padding: 5
                style: 'elevated'
                size_hint: 0.7,0.08
                pos_hint: {'center_x': 0.5,'center_y': 0.1}
                theme_elevation_level: "Custom"
                elevation_level: 3
                theme_shadow_softness: "Custom"
                shadow_softness: 9
                radius: 30
                MDIconButton:
                    icon: 'github'
                MDDivider:
                    orientation: 'vertical'
                    size_hint_y: 0.7
                    pos_hint: {'center_y': 0.5}
                MDIconButton:
                    icon: 'mail'
                MDDivider:
                    orientation: 'vertical'
                    size_hint_y: 0.7
                    pos_hint: {'center_y': 0.5}
                MDIconButton:
                    icon: 'send'
                Widget
                MDIconButton:
                    icon: 'palette'
                MDDivider:
                    orientation: 'vertical'
                    size_hint_y: 0.7
                    pos_hint: {'center_y': 0.5}
                MDIconButton:
                    icon: 'weather-sunny'
            MDLabel:
                text_color: '#303030'
                text: 'Made By V | 2024'
                pos_hint: {'center_y': 0.025, 'center_x': 0.5}
                size_hint: 1,None
                halign: 'center'
                theme_text_color: 'Custom'
            MDCard:
                style: 'elevated'
                theme_elevation_level: "Custom"
                elevation_level: 2
                size_hint: None,None
                size: 80,80
                radius: 31
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                MDIconButton:
                    style: 'filled'
                    size_hint: None,None
                    size: 80,80
                    radius: 30
                    icon: 'content-save'
                    on_release: app.convert()


